@{
    var usuario = ViewContext.HttpContext.Session.GetObject<Usuario>("Usuario");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SummonerMatch</title>
    <link rel="icon" href="~/assets/logos/SummonerMatchIcon.svg" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SummonerMatch.styles.css" asp-append-version="true" />
</head>

<body>
    <header style="background-color: #101014;">
        <nav class="navbar navbar-expand-md navbar-dark w-50 m-auto">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/logos/SummonerMatchIcon.svg" class="d-inline-block d-sm-none ps-2" alt="SummonerMatch" height="30" />
                    <img src="~/assets/logos/SummonerMatchText.svg" class="d-none d-sm-inline-block" alt="SummonerMatch" height="20" />
                </a>
                @if (@usuario == null)
                {
                    <a asp-controller="Account" asp-action="Profile">
                        <button class="navbar-toggler border border-0" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                                aria-label="Toggle navigation">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#adb5bd"
                                 class="bi bi-three-dots" viewBox="0 0 16 16">
                                <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3m5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3" />
                            </svg>
                        </button>
                    </a>
                    

                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="LogIn">
                                    <button type="button" class="btn text-light menuBtnDark">Iniciar Sesión</button>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">
                                    <button type="button" class="btn menuBtnColor">Registrarse</button>
                                </a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Profile">
                            <img src="@Url.Content(usuario.ImagenPerfil)"
                                 alt="Imagen de perfil" class="rounded-circle" width="50" />
                        </a>
                    </div>
                }
            </div>
        </nav>
    </header>


    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer" style="background-color: #101014;">
        <div class="container" style="width: 100%; height: 120px">
            
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
